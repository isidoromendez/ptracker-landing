{
  "hosting": {
    "public": "dist/ptracker-landing",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "hosting": {
      "port": 5000,
      "host": "0.0.0.0"
    },
    "ui": {
      "enabled": true,
      "port": 5001
    }
  },
  "remoteconfig": {
    "template": "remoteconfig.template.json"
  }
}
